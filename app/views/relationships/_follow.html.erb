<% if current_user == user %>
	<%= link_to edit_user_path(user) do %>
		<span class="glyphicon glyphicon-wrench btn btn-default col-xs-12" aria-hidden="true"></span>
	<% end %>
<% else %>
	<% if current_user.following?(user) %>
		<%= link_to user_relationships_path(user), method: :delete, remote: true, class: 'btn btn-success' do %>
			フォロー外す
		<% end %>
	<% else %>
		<%= link_to user_relationships_path(user), method: :post, remote: true, class: 'btn btn-primary' do %>
			フォローする
		<% end %>
	<% end %>
<% end %>