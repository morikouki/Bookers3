<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/info', user: @user %>
			<%= render 'books/new', booknew: @booknew %>
			<h2>Comment</h2>
			<%= form_for [@book, @commentnew] do |f| %>
				<div class="row form-group">
					<%= f.label :comment %><br>
					<%= f.text_area :comment, class:'col-xs-12' %>
				</div>
				<div class="row">
			 		<%= f.submit 'Create Comment', class:'btn btn-primary btn-block' %>
			 	</div>
			<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Comments!</h2>
			<div class="book-image">
				<%= attachment_image_tag @book, :image, :fill, 300, 300, fallback: 'noimage.png', size: '300x300' %>
				
				<i class="fas fa-heart"></i>
			</div>
			<table class="table">
				<thead>
					<th>Name</th>
					<th>Image</th>
					<th>comment</th>
					<th></th>
					<th></th>
				</thead>
				<tbody>
					<% @comments.each do |comment| %>
					<tr>
						<td>
							<%= comment.user.name %>
						</td>
						<td>
							<%= link_to user_path(comment.user) do %>
								<%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, fallback: 'noimage.png', size: '60x60' %>
							<% end %>
						</td>
						<td>
							<%= comment.comment %>
			            </td>
			            <td><%= link_to 'Edit', edit_book_comment_path(comment.book, comment), class:'btn btn-success btn-sm' %></td>
			            <td><%= link_to '削除', book_comment_path(comment.book, comment), class:'btn btn-danger btn-sm', method: :delete, "data-confirm" => "本当に消しますか?" %></td>
					</tr>
		    		<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>