<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'info', user: @user %>
			<%= render 'books/new', booknew: @booknew %>
		</div>
		<div class="col-xs-9">
			<h1>Users</h1>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: 'noimage.png', size: '60x60' %>
						</td>
						<td>
							<%= user.name %>
						</td>
						<td>
							<%= link_to 'Show', user_path(user) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>