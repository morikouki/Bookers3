<h2>User info</h2>
<table class="table">
	<tbody>
	  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: 'noimage.png', size: '60x60' %>
		<tr>
			<th>name</th>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= user.introduction %></td>
		</tr>
		<tr>
			<th>フォロワー</th>
			<td>
				<%= link_to user_followed_path(user) do %>
					<%= user.followed_user.count %>
				<% end %>
			</td>
		</tr>
		<tr>
			<th>フォロー中</th>
			<td>
				<%= link_to user_follower_path(user) do %>
					<%= user.follower_user.count %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>
<div class="row">
	<% if current_user == user %>
		<%= link_to edit_user_path(user) do %>
			<span class="glyphicon glyphicon-wrench btn btn-default col-xs-12" aria-hidden="true"></span>
		<% end %>
	<% else %>
		<% if current_user.following?(user) %>
			<%= link_to user_relationships_path(user), method: :delete, class: 'btn btn-success' do %>
				フォロー外す
			<% end %>
		<% else %>
			<%= link_to user_relationships_path(user), method: :post, class: 'btn btn-primary' do %>
				フォローする
			<% end %>
		<% end %>
	<% end %>
</div>