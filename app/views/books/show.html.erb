<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<p class="succes"><%= flash[:save] %></p>
			<p class="succes"><%= flash[:update] %></p>
			<%= render 'users/info', user: @user %>
			<%= render 'new', booknew: @booknew %>
		</div>
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user) do %>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: 'noimage.png', size: '60x60' %><br>
								<%= @book.user.name %>
							<% end %>
						</td>
						<td>
							<%= @book.title %>
						</td>
						<td>
							<%= @book.body %>
						</td>
					<% if @book.user_id == current_user.id %>
						<td>
							<%= link_to 'Edit', edit_book_path(@book), class:'btn btn-success btn-sm' %>
						</td>
						<td>
							<%= link_to 'Destroy', book_path(@book), class:'btn btn-danger btn-sm', method: :delete, "data-confirm" => "本当に消しますか?" %>
						</td>
					<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>