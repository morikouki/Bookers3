<div class="container">
	<div class="row">
		<% if @booknew.errors.any? %>
   			<p class="error">error!!!!</p>
		<% end %>
		<% if @booknew.errors.any? %>
		  <div id="error_explanation" class="alert alert-danger">
		    <ul>
		      <% @booknew.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>
		<div class="col-xs-3">
			<%= render 'users/info', user: @user %>
			<%= render 'new', booknew: @booknew %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Image</th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: 'noimage.png', size: '60x60' %>
							<% end %>
						</td>
						<td>
							<%= link_to book_comments_path(book) do %>
								<%= attachment_image_tag book, :image, :fill, 60, 60, fallback: 'noimage.png', size: '60x60' %>
							<% end %>
						</td>
						<td>
							<%= link_to book_path(book) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
				<% end %>
				</tbody>
			 </table>
			 <%= paginate @books %>
		</div>
	</div>
</div>
