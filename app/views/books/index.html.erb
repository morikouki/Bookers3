<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'new', booknew: @booknew %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
				</tbody>
			 </table>
		</div>
	</div>
</div>
